<mapper namespace="com.imobpay.base.dao.CrsBlackUserDao">

	
	<sql id="paramSql">
		<!--  此处一定要增加一个查询 -->
		<if test="blackdesc !=null and blackdesc !=''">
			AND BLACKDESC =  #{blackdesc}
		</if>
		<if test="branchid !=null and branchid !=''">
			AND BRANCHID =  #{branchid}
		</if>
		<if test="appuser !=null and appuser !=''">
			AND APPUSER =  #{appuser}
